package aula10;

import java.util.Scanner;

public class exemplo01 {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        System.out.println("Digite o primeiro número: ");
        int num1 = scanner.nextInt();

        System.out.println("Digite o segundo número: ");
        int num2 = scanner.nextInt();

        System.out.println("Digite o terceiro número: ");
        int num3 = scanner.nextInt();

        System.out.println("Digite o quarto número: ");
        int num4 = scanner.nextInt();

        int[] nmr = new int[4];
        nmr[0] = num1;
        nmr[1] = num2;
        nmr[2] = num3;
        nmr[3] = num4;

        System.out.println("Primeiro elemento: " + nmr[0]);
        System.out.println("Segundo elemento: " + nmr[1]);
        System.out.println("Terceiro elemento: " + nmr[2]);
        System.out.println("Quarto elemento: " + nmr[3]);

        scanner.close();
    }
}

-----------------------------------------------------------------------------------------------------
package aula10;
import java.util.Scanner;
public class exemplo02 {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        System.out.println("Digite um primeiro numero: ");
        int nmr1 = scanner.nextInt();

        System.out.println("Digite um segundo numero: ");
        int nmr2 = scanner.nextInt();

        System.out.println("Digite um terceiro numero: ");
        int nmr3 = scanner.nextInt();

        System.out.println("Digite um quarto numero: ");
        int nmr4 = scanner.nextInt();

        System.out.println("Digite um quinto numero: ");
        int nmr5 = scanner.nextInt();

        int[] numeros = { nmr1, nmr2, nmr3, nmr4, nmr5 };
        for (int i = 0; i < numeros.length; i++) {
            System.out.println("Sequência de números digitados: " + numeros[i]);
        }

        scanner.close();

    }
}
