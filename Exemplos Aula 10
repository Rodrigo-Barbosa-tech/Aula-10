package aula10;

import java.util.Scanner;

public class exemplo01 {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        int[] num1 = new int[4];
        num1[0] = 10;
        num1[1] = 20;
        num1[2] = 30;
        num1[3] = 40;

        System.out.println("Primeiro elemento: " + num1[0]);

        scanner.close();
    }

}
